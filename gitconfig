  name = Tim Uruski
  email = timuruski@gmail.com
[github]
  user = timuruski
  token = !security 2>&1 >/dev/null find-generic-password -gs github.token | ruby -e 'print $1 if STDIN.gets =~ /^password: \\\"(.*)\\\"$/'
[color]
  ui = auto
[alias]
  s = status
  st = status
  aa = add --all
  p = add --patch
  ap = add --patch
  cp = checkout --patch
  rp = reset --patch
  hard-reset = reset --hard HEAD
  ci = commit
  co = checkout
  amend = commit --amend
  pullff = pull --ff-only
  pullrb = pull --rebase
  pom = push origin master
  ff = merge --ff
  noff = merge --no-ff
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  lt = !git l --since=yesterday
  r = !git --no-pager l -15
  ra = !git r --all
  dc = diff --cached
  diffc = diff --cached
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue) <%an>%Creset
[core]
  excludesfile = /Users/timuruski/.gitignore_global
