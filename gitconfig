[alias]
  aa = add --all
  amend = commit --amend
  au = add --update
  b = branch
  c = commit
  co = checkout
  current-branch = branch --show-current
  d = diff -M
  dc = diff --cached
  ds = diff --stat
  diffc = diff --cached
  discard = checkout --patch
  deploy-msg = "!source ~/.githelpers && deploy_git_log"
  evo = log --pretty=format:"[%h] %an %ad %s" --date=short --numstat
  ff = "!source ~/.githelpers && ffwd"
  ffx = merge --ff-only
  git = !git
  h = !git head
  head = !git l -1
  hp = "!source ~/.githelpers && show_git_head"
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  ld = !git l --simplify-by-decoration
  lt = !git l --since=yesterday
  noff = merge --no-ff
  p = add --patch
  po = push origin
  pob = !source ~/.githelpers && push_origin
  pom = push origin master
  r = !git --no-pager l -20
  ra = !git r --all
  s = status -sb
  sw = fuzzy-switch
  show-upstream = "rev-parse --abbrev-ref --symbolic-full-name @{u}"
  unstage = reset --patch
	update = pull --ff-only
	new-branch = checkout -b
