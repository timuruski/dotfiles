source /usr/local/share/chruby/chruby.sh
source /usr/local/share/gem_home/gem_home.sh

# use ruby [version]
use_ruby() {
  local ver=$1

  if [[ -z $ver ]] && [[ -f .ruby-version ]]; then
    ver=$(cat .ruby-version)
  fi

  if [[ -z $ver ]]; then
    echo "Unknown ruby version $ver"
    exit 1
  fi

  chruby $ver
  gem_home .
}
