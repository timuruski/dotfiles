#!/usr/bin/env ruby -w

require 'optparse'

class Battery
  def initialize
    @data = {}
    parse_data
  end

  def parse_data
    raw_data = `ioreg -rc AppleSmartBattery`
    raw_data.scan(/"([^"]+)" = (.+)$/) { |key, value|
      # puts "#{key}: #{value}"
      @data[key] = value
    }
  end

  def current_capacity
    @data['CurrentCapacity'].to_f
  end

  def max_capacity
    @data['MaxCapacity'].to_f
  end

  def charge
    (current_capacity / max_capacity) * 100.00
  end

  def time_remaining
    @data['TimeRemaining'].to_f.divmod 60.00
  end

  def status
    c = "%2d%%" % charge
    t = "%1d:%2d remaining" % time_remaining

    "#{c} #{t}"
  end

end

battery = Battery.new
puts battery.status

__END__

