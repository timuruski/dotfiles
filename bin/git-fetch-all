#! /bin/bash

set -e

bold=$(tput bold)
normal=$(tput sgr0)

WORKSPACE="${HOME}/workspace"
PROJECTS=(
  tether-api
  tether-ios
  tether-web-client
  dotfiles
)

for project in "${PROJECTS[@]}"; do
  echo "Fetching ${bold}${project}${normal}"

  project_path="${WORKSPACE}/${project}"
  cd $project_path

  git fetch --prune origin
done
