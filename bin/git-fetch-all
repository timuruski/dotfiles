#! /bin/bash

set -e

bold=$(tput bold)
normal=$(tput sgr0)

PROJECTS=(
  tether-webapp
  tether-ios
  tether-android
  tether-www
  tether-api
  tether-client
  tether-admin
  petrofeed-ops
  tech-blog
  dotfiles
  platform-apis)
for project in "${PROJECTS[@]}"; do
  echo "Fetching ${bold}${project}${normal}"

  project_path="${HOME}/workspace/$project"
  cd $project_path

  git fetch --prune origin
done
